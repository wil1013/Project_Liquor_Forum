<form action="/paintings/{{painting.id}}" method="POST" style="clear: left; text-align: center;">
  
  <input type="hidden" name="_method" value="PUT">
  <label for="name">Title<br>
    <input type="text" name="title" value="{{painting.title}}"><br>
  </label><br>
  <label for="photo_url">IMG URL<br>
    <input type="text" name="img_url" value="{{painting.img_url}}"><br>
  </label><br>
  <label for="nationality">Year made<br>
    <input type="text" name="year_made" value="{{painting.year_made}}"><br>
  </label><br>
  <label for="artist">Artist<br>
    <select name="artist_id">
      {{#each artists}}
      <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </label><br>
  <br>
  <input type="submit" value="Submit">
</form>
